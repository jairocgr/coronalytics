
<div class="col col-md-5 col-12">
  <%= form_for(@record, url: action) do |f| %>

    <% if @record.errors.any? %>
      <div class="alert alert-danger">
        <p>Validation errors</p>
        <ul>
          <% @record.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :year, class: 'form-label' %>
      <%= f.text_field :year, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :deaths, class: 'form-label' %>
      <%= f.text_field :deaths, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :pandemic_year, class: 'form-check-input' %>
        <%= f.label :pandemic_year, class: 'form-check-label' %>
      </div>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
